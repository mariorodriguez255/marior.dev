---
import { GLOBAL } from "../../lib/variables";
---

<div class="mt-12 mb-8">
  <h2 class="text-2xl font-display mb-6">{GLOBAL.experienceTitle}</h2>
  
  <div class="space-y-8">
    {GLOBAL.experiences.map((experience) => (
      <div class="flex flex-col sm:flex-row gap-4">
        <div class="w-full sm:w-1/3">
          <h3 class="text-lg font-mono font-semibold zag-text zag-transition">{experience.position}</h3>
          <p class="text-sm zag-muted zag-transition">
            {experience.company} â€¢ {experience.period}
          </p>
          {experience.contractType && (
            <p class="text-xs zag-muted zag-transition italic">
              {experience.contractType}
            </p>
          )}
        </div>
        <div class="w-full sm:w-2/3">
          <p class="zag-text zag-transition">
            {experience.description}
          </p>
          {experience.skills && (
            <div class="flex flex-wrap gap-2 mt-3">
              {experience.skills.map((skill) => (
                <span class="-zag-text -zag-bg zag-transition px-2 py-1 text-xs font-semibold">
                  {skill}
                </span>
              ))}
            </div>
          )}
        </div>
      </div>
    ))}
  </div>
</div>